.col-12
  %h1.text-center Experiences 
- @experiences.each do |exp|
  .col-12.my-5
    %h2.text-center= exp.title 
    .row
      - exp.curriculums.limit(6).each do |curriculum|
        .col-12.col-md-6.col-lg-4
          = link_to curriculum, class:"offLink" do 
            .card
              %img.card-img-top{:alt => "#{curriculum.title}", :src => "#{curriculum.c_image.url(:big)}"}/
              .card-body
                %h3.card-text= curriculum.title
                %p.card-text= truncate(curriculum.description_experience.html_safe, length: 200)
